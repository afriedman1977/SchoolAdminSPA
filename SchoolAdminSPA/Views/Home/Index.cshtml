@{
    ViewData["Title"] = "Home Page";
}

<div ng-controller="indexCtrl">
    
    <div class="carousel-inner" role="listbox">
        <table class="table table-bordered table-striped">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>

            <tr ng-repeat="student in students">
                <td>{{student.firstName}}</td>
                <td>{{student.lastName}}</td>
                <td>{{student.email}}</td>
                <td>{{student.phoneNumber}}</td>
                <td>
                    <a href="/home/edit?id={{student.studentId}}">Edit Student</a>
                    <a href="/home/Tests?id={{student.studentId}}">View Tests</a>
                    <button class="btn btn-danger" ng-click="deleteStudent(student.studentId)">Delete</button>
                </td>
            </tr>
        </table>
        <a href="/home/Edit?id=new" class="btn btn-primary">Add Student</a>
    </div>
       
    </div>
    


